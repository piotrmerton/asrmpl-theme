<ul class="squad__list">
    {% for player_group in squad %}
        <li class="list__item item--group">
            <h4 class="header--no-margin">{{ player_group.labels.plural }}</h4>
            <ul class="ui-list players__list">
                {% for player in player_group.players %}
                    <li class="list__item item--player{% if player.id == post.id %} item--active{% endif %}">
                        <a href="{{ player.link }}">
                            <span class="player__number">{{ player.meta('number') }}.</span>
                            <span class="player__name">{{ player.title }}</span>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </li>
    {% endfor %}
</ul>