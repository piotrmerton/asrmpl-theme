{% extends "layout/base.twig" %}

{% block body %}

    <div class="content__main content--search">

        <section class="content__title text--white">
            <h1>{{ __('Wyniki wyszukiwania dla frazy', 'theme') }}: "{{search_query}}"</h1>
        </section>

        <section class="page__layout">
            <div class="layout__grid">
                <main class="layout__main">

                    {% include "components/breadcrumbs.twig" %}

                    {% if posts is empty %}

                        <div class="ui-message message--info">
                            <p>{{ __('Brak rezultat√≥w dla frazy', 'theme') }}: "{{search_query}}".</p>
                        </div>

                    {% else %}
                        {% include 'partials/listing/posts-list.twig' with { 'class' : 'list--archive' } %}
                        {% include 'components/pagination.twig' %}
                    {% endif %}

                </main>     

                <aside class="layout__side">

                    {% include "blocks/side/block-schedule.twig" %}
                    {% include "components/banner/banner-social.twig" %}
                    
                </aside>
            </div>

        </section><!-- /page__layout -->

    </div>
    
{% endblock %}
